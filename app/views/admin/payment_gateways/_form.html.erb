<%= form_for [:admin, @payment_gateway], :html => { :class => :form } do |f| -%>

  <div class="group">
    <%= f.label :name, t("activerecord.attributes.payment_gateway.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.name", :default => "") %></span>
  </div>

  <div class="group">
    <%= f.label :class_name, t("activerecord.attributes.payment_gateway.class_name", :default => "Class name"), :class => :label %>
    <%= f.text_field :class_name, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.class_name", :default => "") %></span>
  </div>

  <div class="group">
    <%= f.label :is_active, t("activerecord.attributes.payment_gateway.is_active", :default => "Is active"), :class => :label %>
    <%= f.check_box :is_active, :class => 'check_box' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.is_active", :default => "") %></span>
  </div>

  <div class="group">
    <%= f.label :additional_flat_fee, t("activerecord.attributes.payment_gateway.additional_flat_fee", :default => "Additional flat fee"), :class => :label %>
    <%= f.text_field :additional_flat_fee, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.additional_flat_fee", :default => "") %></span>
  </div>

  <div class="group">
    <%= f.label :additional_percentage_fee, t("activerecord.attributes.payment_gateway.additional_percentage_fee", :default => "Additional percentage fee"), :class => :label %>
    <%= f.text_field :additional_percentage_fee, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.additional_percentage_fee", :default => "") %></span>
  </div>

  <div class="group">
    <%= f.label :free_from_cart_value, t("activerecord.attributes.payment_gateway.free_from_cart_value", :default => "Free from cart value"), :class => :label %>
    <%= f.text_field :free_from_cart_value, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.payment_gateway.free_from_cart_value", :default => "") %></span>
  </div>
        
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
    </button>
    <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_payment_gateways_path, :class => "text_button_padding link_button" %>
  </div>
<% end -%>