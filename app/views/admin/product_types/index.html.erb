<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_product_types_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_product_type_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t('groovy_cart.modules.product_types') %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.admin_product_type.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @product_types.each do |product_type| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= product_type.id %>
          </td>
          <td>
            <%= link_to product_type.name, admin_product_type_path(product_type) %>
          </td>
          <td class="last">
            <%= link_to "#{t(".new_product", :default => "Add new product using this template")}", new_admin_product_path(:product_type=>product_type) %> |
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_product_type_path(product_type) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_product_type_path(product_type) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_product_type_path(product_type), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
