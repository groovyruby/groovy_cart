<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_option_groups_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_option_group_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t('groovy_cart.modules.option_groups') %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.admin_option_group.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @option_groups.each do |option_group| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= option_group.id %>
          </td>
                    <td>
            <%= link_to option_group.name, admin_option_group_path(option_group) %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_option_group_path(option_group) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_option_group_path(option_group) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_option_group_path(option_group), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
