<table class="nested_table">
  <tr>
    <td>
      <%= f.label :question, t("activerecord.attributes.survey_question.question", :default => "Question"), :class=>"label" %>
      <%= f.text_field :question, :class=>"text_field" %>
    </td>
    <td>
      <%= f.label :field_type, t("activerecord.attributes.survey_question.field_type", :default => "Field type"), :class=>"label" %>
      <%= f.select :field_type, SurveyQuestion::FIELD_TYPES %>
    </td>
    <td>
      <%= f.label :field_options, t("activerecord.attributes.survey_question.field_options", :default => "Field options"), :class=>"label" %>
      <%= f.text_field :field_options, :class=>"text_field" %>
    
      <%#= f.label :is_required, :class=>"label" %>
      <%#= f.check_box :is_required, :class=>"check_box" %>
    </td>
  </tr>
  <tr>
    <td colspan="3" class="destroy_row">
      <%= f.label :_destroy, t('groovy_cart.common.destroy') %>
      <%= f.check_box :_destroy%>
    </td>
  </tr>
</table>

