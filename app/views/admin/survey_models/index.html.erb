<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_survey_models_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_survey_model_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> SurveyModels</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.survey_model.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @survey_models.each do |survey_model| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= survey_model.id %>
          </td>
                    <td>
            <%= link_to survey_model.name, admin_survey_model_path(survey_model) %>
          </td>
                    <td>
            <%= survey_model.created_at %>
          </td>
          <td class="last">
            <%= link_to t('.surveys', :default=>"Show surveys"), admin_survey_model_surveys_path(survey_model) %> |
            <%= link_to t('.statistics', :default=>"Statistics"), statistics_admin_survey_model_path(survey_model) %><br/>
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_survey_model_path(survey_model) %> |
            <% if survey_model.surveys.empty? %>
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_survey_model_path(survey_model) %> |
            <% end %>
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_survey_model_path(survey_model), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
