<%= form_for([:admin, @product]) do |f| %>
  <%= render :partial => '/admin/shared/form_errors', :locals=>{:f=>f} %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :brand %><br />
    <%= f.select :brand_id, [['']] | Brand.all.map{|b| [b.name, b.id]} %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :price_promo %><br />
    <%= f.text_field :price_promo %>
  </div>
  <div class="field">
    <%= f.label :categories %><br />
    <%= f.select :category_ids, Category.all.map{|b| [b.name, b.id]}, {}, {:multiple=>true} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
