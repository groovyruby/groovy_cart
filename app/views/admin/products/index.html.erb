<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_products_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_product_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t('groovy_cart.modules.products') %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">
            <%= sort_link @search, :id %>
          </th>
          <th>
            <%= sort_link @search, :name, t("activerecord.attributes.product.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th>
            <%= sort_link @search, :sku, t("activerecord.attributes.product.sku", :default => t("activerecord.labels.sku", :default => "SKU")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @products.each do |product| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= product.id %>
          </td>
          <td>
            <%= link_to product.name, admin_product_path(product) %>
          </td>
          <td>
            <%= product.sku %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_product_path(product) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_product_path(product) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_product_path(product), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <div class="pagination">
            <%= will_paginate @products %>
          </div>

        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
