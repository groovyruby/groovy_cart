<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_banner_types_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_banner_type_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_banner_type_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.banner_type.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @banner_type.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.banner_type.height", :default => t("activerecord.labels.height", :default => "Height")) %>:</b>
          <%= @banner_type.height %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.banner_type.width", :default => t("activerecord.labels.width", :default => "Width")) %>:</b>
          <%= @banner_type.width %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_banner_type_path(@banner_type), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_banner_type_path(@banner_type), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>