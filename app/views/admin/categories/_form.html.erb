<%= form_for [:admin, @category], :html => { :class => :form } do |f| -%>
  <%= render :partial=>'/admin/shared/form_errors', :locals=>{:f=>f} %>
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.category.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field', :'data-validate'=>'validate(required)' %>
    <span class="description"><%= t("groovy_cart.descriptions.category.name") %></span>
  </div>

  <div class="group">
    <%= f.label :parent_id, t("activerecord.attributes.category.parent", :default => "Parent"), :class => :label %>
    <%= f.select :parent_id, [['','']]|categories_option_tree, :class => 'select' %>
    <span class="description"><%= t("groovy_cart.descriptions.category.parent") %></span>
  </div>

  <div class="group">
    <%= f.label :extra_params, t("activerecord.attributes.category.extra_params", :default => "Extra params"), :class => :label %>
    <%= f.text_field :extra_params, :class => 'text_field' %>
    <span class="description"><%= t("groovy_cart.descriptions.category.extra_params") %></span>
  </div>

  <div class="group">
    <%= f.label :is_visible, t("activerecord.attributes.category.is_visible", :default => "Is visible"), :class => :label %>
    <%= f.check_box :is_visible, :class => 'text_field' %>
    <span class="description visible_description"><%= t("groovy_cart.descriptions.category.is_visible") %></span>
  </div>

        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
  <%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_categories_path, :class => "text_button_padding link_button" %>
</div>
<% end %>