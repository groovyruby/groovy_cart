<%= form_for [:admin, @banner], :html => { :class => :form, :multipart=>true } do |f| -%>
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.banner.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :banner, t("activerecord.attributes.banner.banner", :default => "Banner"), :class => :label %>
    <%= f.file_field :banner, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :banner_type_id, t("activerecord.attributes.banner.banner_type_id", :default => "Banner type"), :class => :label %>
    <%= f.select :banner_type_id, BannerType.all.map{|bt| [bt, bt.id]}, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :banner_placement_id, t("activerecord.attributes.banner.banner_placement_id", :default => "Banner placement"), :class => :label %>
    <%= f.select :banner_placement_id, BannerPlacement.all.map{|bp| [bp.name, bp.id]}, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :is_active, t("activerecord.attributes.banner.is_active", :default => "Is active"), :class => :label %>
    <%= f.check_box :is_active, :class => 'check_box' %>
    <span class="description">Ex: a simple text</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_banners_path, :class => "text_button_padding link_button" %>
</div>
<% end %>