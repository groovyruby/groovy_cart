<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_banners_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_banner_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t('groovy_cart.modules.banners') %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.admin_banner.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @banners.each do |banner| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= banner.id %>
          </td>
                    <td>
            <%= link_to banner.name, admin_banner_path(banner) %>
          </td>
                    <td>
            <%= banner.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_banner_path(banner) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_banner_path(banner) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_banner_path(banner), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
