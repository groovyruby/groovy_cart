<%= form_for [:admin, @brand], :html => { :class => :form, :multipart=>true } do |f| -%>
  <%= render :partial=>"/admin/shared/form_errors", :locals=>{:f=>f} %>
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.brand.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description"><%= t("groovy_cart.descriptions.brand.name") %></span>
  </div>
  
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
    </button>
    <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_brands_path, :class => "text_button_padding link_button" %>
  </div>
<% end %>