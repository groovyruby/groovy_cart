<!DOCTYPE html>
<html>
<head>
  <title>GroovyCart</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery/jquery.min', 'application', 'rails', 'groovy_cart' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) || "" %>
  <script type="text/javascript">
    $(document).ready(function(){
      <%= yield(:body_onload) || "" %>
    });
  </script>
</head>
<body>
<strong>Session: </strong><%= debug(session) %>
<Br /><br />

<% if customer_signed_in? %>
<%= link_to "my account", my_account_path %> | <%= link_to "sign out", destroy_customer_session_path %>
<% else %>
<%= link_to "sign up", new_customer_registration_path %> | <%= link_to "sign in", new_customer_session_path %>
<% end %>
<br /><br />
<%= yield %>

</body>
</html>
